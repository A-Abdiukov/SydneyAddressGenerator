<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>

            <RowDefinition Height="1.5*"></RowDefinition>

            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>

            <RowDefinition Height="1.5*"></RowDefinition>

            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Number of records to generate" Grid.Row="0" Grid.Column="0"></Label>
        <TextBox Text="1" PreviewTextInput="NumberValidationTextBox" Grid.Row="0" Grid.Column="1"></TextBox>

        <Label Content="Region" Grid.Row="1" Grid.Column="0"></Label>
        <ComboBox x:Name="Cb_AvailableRegions" Grid.Row="1" Grid.Column="1"></ComboBox>

        <CheckBox Margin="10" Content="First name" Grid.Row="3" Grid.Column="0"></CheckBox>
        <CheckBox Margin="10" Content="Last name" Grid.Row="3" Grid.Column="1"></CheckBox>

        <CheckBox Margin="10" Content="Gender" Grid.Row="4" Grid.Column="0"></CheckBox>
        <CheckBox Margin="10" Content="Date of birth" Grid.Row="4" Grid.Column="1"></CheckBox>

        <CheckBox Margin="10" Content="Email" Grid.Row="5" Grid.Column="0"></CheckBox>
        <CheckBox Margin="10" Content="Phone number" Grid.Row="5" Grid.Column="1"></CheckBox>

        <Button x:Name="Btn_GenerateCSV" Content="Generate CSV file" Grid.Row="7" Grid.Column="1"
                Click="Btn_GenerateCSV_Click"></Button>
    </Grid>
</Window>
