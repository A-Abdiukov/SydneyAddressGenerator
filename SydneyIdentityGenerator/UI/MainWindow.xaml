<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>

        <Label Content="Name of database" FontSize="16" Grid.Row="0" Grid.Column="0"></Label>
        <TextBox  FontSize="16" Grid.Row="0" Grid.Column="1"></TextBox>

        <Label Content="Name of table" FontSize="16" Grid.Row="1" Grid.Column="0"></Label>
        <TextBox FontSize="16" Grid.Row="1" Grid.Column="1"></TextBox>

        <Label Content="First field" FontSize="16" Grid.Row="2" Grid.Column="0"></Label>
        <TextBox FontSize="16" Grid.Row="2" Grid.Column="1"></TextBox>

        <Label Content="Second field" FontSize="16" Grid.Row="3" Grid.Column="0"></Label>
        <TextBox  FontSize="16" Grid.Row="3" Grid.Column="1"></TextBox>

        <Label Content="Third field" FontSize="16" Grid.Row="4" Grid.Column="0"></Label>
        <TextBox  FontSize="16" Grid.Row="4" Grid.Column="1"></TextBox>

        <Button Content="Generate CSV file" FontSize="16" Grid.Row="5" Grid.Column="0"></Button>
    </Grid>
</Window>
